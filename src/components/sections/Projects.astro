---
import Section from "../Section.astro";

import { projects } from "@cv";
---

<Section title="Projectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, isActive }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                <a href="{url}" title={`ver el proyecto ${name}`}>
                  {name}
                </a>
                { isActive && <span>&bull;</span> }
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlights) => {
                  return <span>{highlights}</span>;
                })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: solid #f2f2f2 1px;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article h3 span{
    color: rgb(0, 188, 64);
  }

  article a {
    color: #111;
  }

  article a;:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  footer {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 6px;
    font-size: 0.6rem;
  }
  footer span {
    border-radius: 6px;
    font-size: 0.6rem;
    font-weight: 500;
    color: #555;
    background: #eee;
    padding: 0.2rem 0.6rem;
  }
</style>
